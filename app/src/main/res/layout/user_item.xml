<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/firstNameInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/surnameInfoTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/surnameInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firstNameInfoTv"
        app:layout_constraintEnd_toStartOf="@id/emailInfoTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Doe"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/emailInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/surnameInfoTv"
        app:layout_constraintEnd_toStartOf="@+id/passwordInfoTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="gmail"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/passwordInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/emailInfoTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="abc123"/>
</androidx.constraintlayout.widget.ConstraintLayout>